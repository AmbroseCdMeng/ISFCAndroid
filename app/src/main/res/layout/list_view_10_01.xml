<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="51dp"
        android:layout_height="11dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:text="@string/label_materialNum"
        android:textColor="@color/colorBlack"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/materialNum"
        android:layout_width="80dp"
        android:layout_height="11dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:text="1157933247"
        android:textColor="@color/colorBlack"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/materialName"
        android:layout_width="51dp"
        android:layout_height="11dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="26dp"
        android:includeFontPadding="false"
        android:text="@string/label_materialName"
        android:textColor="@color/colorBlack"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inStorageCount"
        android:layout_width="80dp"
        android:layout_height="11dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="26dp"
        android:includeFontPadding="false"
        android:text="12345678900"
        android:textColor="@color/colorBlack"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="11dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="43dp"
        android:includeFontPadding="false"
        android:text="@string/label_inStorageCount"
        android:textColor="@color/colorBlack"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="11dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="43dp"
        android:includeFontPadding="false"
        android:text="0/200 PCS"
        android:textColor="@color/colorLakeGreenDark"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="16dp"
        android:layout_height="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="12dp"
        android:focusable="false"
        android:src="@mipmap/go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>