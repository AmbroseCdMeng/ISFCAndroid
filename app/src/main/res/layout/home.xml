<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <include
        android:id="@+id/title"
        layout="@layout/title_bar" />

    <Button
        android:id="@+id/btn_InStorage"
        android:layout_width="121dp"
        android:layout_height="77dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/shape_corner_shadow_1"
        android:drawableTop="@mipmap/instorage"
        android:drawablePadding="-10dp"
        android:paddingTop="12dp"
        android:text="@string/btn_inStorage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />


    <Button
        android:id="@+id/btn_OutStorage"
        android:layout_width="121dp"
        android:layout_height="77dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/shape_corner_shadow_1"
        android:drawableTop="@mipmap/outstorage"
        android:drawablePadding="-10dp"
        android:paddingTop="12dp"
        android:text="@string/btn_outStorage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />


    <Button
        android:id="@+id/btn_AsnRelated"
        android:layout_width="121dp"
        android:layout_height="77dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_corner_shadow_1"
        android:drawableTop="@mipmap/asn"
        android:drawablePadding="-10dp"
        android:paddingTop="12dp"
        android:text="@string/btn_asnRelated"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_InStorage" />


    <Button
        android:id="@+id/btn_More"
        android:layout_width="121dp"
        android:layout_height="77dp"
        android:padding="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/shape_corner_shadow_1"
        android:drawableTop="@mipmap/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_OutStorage" />


</android.support.constraint.ConstraintLayout>